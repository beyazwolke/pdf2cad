{
  "name": "pdf2cad-desktop",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist:portable": "electron-builder --win portable",
    "dist:setup": "electron-builder --win nsis",
    "dist:all": "electron-builder --win portable nsis"
  },
  "dependencies": {
    "pdfjs-dist": "^4.10.38"
  },
  "devDependencies": {
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "de.pdf2cad.desktop",
    "productName": "PDF2CAD",
    "files": [
      "main.js",
      "preload.js",
      "app/**/*",
      "core/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        "portable",
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "PDF2CAD"
    }
  }
}